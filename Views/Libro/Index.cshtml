@model IEnumerable<Libros_Leidos.Models.Libros>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Generos generos = new Generos();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<link rel="stylesheet" href="~/CSS/CSSIndex.css" />

<div class="card">
    <div class="card-info">
        <p class="title">Registros de Libros</p>
    </div>
</div>

<br />
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_publicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_libro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => generos.GetGenerosById(item.id_genero).nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_publicacion)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_libro }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id_libro }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_libro })
            </td>
        </tr>
}
    </tbody>
</table>
